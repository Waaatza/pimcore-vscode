{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "out",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "vscode"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-test", "src/test"]
}